phoneme i
  vwl  starttype #i  endtype #i
  unstressed
  ipa i
  length 150
  IfNextVowelAppend(;)
  
//  IF NOT thisPh(isFinalVowel) THEN
//    ChangePhoneme(I)
//  ENDIF
  
  FMT(vowel/ii_7)
endphoneme

phoneme i:
  vwl  starttype #i  endtype #i
  length 175 lng
  IfNextVowelAppend(;)
  IF prevPh(w) THEN
    VowelStart(w/wi2)
  ENDIF
  FMT(vowel/i)
endphoneme

phoneme I
  vwl  starttype #i endtype #i
  length 130
  IfNextVowelAppend(;)
  FMT(vowel/ii)
endphoneme

// G : Taken from US
// Schwa i in : th*e* + vowel / or for genitives like Liz's
phoneme I2
  vwl  starttype #i  endtype #i
  unstressed
  length 160
  IfNextVowelAppend(;) // Make it long before vowels.
  FMT(vowel/ii#_3)
endphoneme

// G : (BEN) : to review!
// used for [I] which may be [@] in some accents
phoneme I#
  vwl  starttype #i  endtype #i
  unstressed
  length 160
  ipa ᵻ
//  FMT(vowel/@_fnt)
  FMT(vowel/ii#)
endphoneme


// G : (BEN) : to review!
// used for [I] in -ed adjectives which may be [E] in some accents
phoneme I2#   
  vwl  starttype #@  endtype #@
  unstressed

  IfNextVowelAppend(;)
  ChangePhoneme(I2)
endphoneme


// used for "ir" when [3:] is split (Scottish)
phoneme IR        
  vwl  starttype #@  endtype #@
  length 190
  ipa əɹ
  IF nextPhW(r-) OR nextPhW(r-2) THEN
    ipa ə
  ENDIF
  IfNextVowelAppend(r-2)
  FMT(vowelr/V_r)
endphoneme

phoneme i@
  vwl  starttype #i  endtype #@
  length 240
  IfNextVowelAppend(r-)
  FMT(vwl_en_rp/i@)
endphoneme

// Ex: fear
// For the IPA, restore the rhotic mark of the diphtong before vowels.
// This is what Tolkien does in the full writing modes (but his own pronounciation is more like the GA)
phoneme i@3
  vwl  starttype #i  endtype #@
  length 280
  ipa ɪ|ɹ
  IF nextPhW(r) THEN
    ipa ɪə
  ENDIF
  IfNextVowelAppend(r)
  FMT(vwl_en_us/ir)
endphoneme


